header
  h1
    a(href='/') Art Rebellion
  nav
    ul.artists
    each artist in publishedArtists
      li.active
        a(href='/artists/'+artist.slug)= artist.name
    ul.periphery
      li
        a(href='/art-list', title='Browse all artwork') Browse All Artwork
      li
        a(href='/about', title='About the Art Rebellion Gallery') About
      li
        a(href='http://blog.artrebellion.com', title='The Art Rebellion Gallery Blog') Blog
      li
        a(href='/shopping-cart', title='Current items in your gallery shopping cart') Cart
      li
        a(href='/contact', title='Gallery contact details') Contact
        if visitor
          li
            a(href='/visitor/logout', title='Log Out') Log Out
        else
          li
            a(href='/login', title='Log In', id='aLogin') Log In
          li
            a(href='/register', title='Register', id='aRegister') Register
.context-information
  ul.breadcrumbs
  h2 #{pageTitle}       