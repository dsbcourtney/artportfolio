form(method="POST", enctype="multipart/form-data", action="/admin/artwork")
  label(for="artImages") File to upload
  input(name="artImages", type="file",  multiple)
  label(for="artist") Artist
  select(name="artist")
    option(value="") -- Not set --
    each artist in artists 
        option(value=artist._id)= artist.name  
  input(name="upload", type="hidden")
  .controls
    input(type="submit", value="Create")