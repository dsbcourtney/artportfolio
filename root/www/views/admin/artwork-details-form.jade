form(method="POST", action=formAction)
  img(src="/img/artwork/"+artwork.image.max200px, style="display:block; padding:5px; border:solid 1px #666;") 
  label(for="artwork[title]") Title
  input(name="artwork[title]", type="text", placeholder="title", value=artwork.title)
  label(for="artwork[artist]") Artist
  select(name="artwork[artist]")
    option(value="") -- Not set --
    each artist in artists 
      if artwork.artist == artist.slug 
        option(value=artist.slug, selected)= artist.name 
      else
        option(value=artist.slug)= artist.name
  label(for="artwork[type]") Type
  input(name="artwork[type]", type="text", placeholder="type", value=artwork.type)
  label(for="artwork[description]") Description
  textarea(name="artwork[description]")= artwork.description
  label(for="artwork[released]") Date Released
  input(name="artwork[released]", type="text", placeholder="Date Released", value=artwork.released)       
  fieldset#formats
    legend Formats
    each format, i in artwork.format
      div.controls
        input(class="showHideFormat", type="button", value="Show / Hide")
      div.format
        label(for="artwork[format]["+i+"][type]") Type
        input(name="artwork[format]["+i+"][type]", type="text", placeholder="Type", value=format.type)
        label(for="artwork[format]["+i+"][detail]") Detail
        input(name="artwork[format]["+i+"][detail]", type="text", placeholder="Detail", value=format.detail)
        label(for="artwork[format]["+i+"][printsRun]") Prints Run
        input(name="artwork[format]["+i+"][printsRun]", type="text", placeholder="Prints Run", value=format.printsRun)        
        label(for="artwork[format]["+i+"][width]") Width in centimeters
        input(name="artwork[format]["+i+"][width]", type="text", placeholder="Width Centimeters", value=format.width)
        label(for="artwork[format]["+i+"][height]") Height in centimeters
        input(name="artwork[format]["+i+"][height]", type="text", placeholder="Height Centimeters", value=format.height)                
        label(for="artwork[format]["+i+"][price]") Price &pound; (GBP)
        input(name="artwork[format]["+i+"][price]", type="text", placeholder="Price &pound; (GBP)", value=format.price)
        label(for="artwork[format]["+i+"][stock]") Stock
        input(name="artwork[format]["+i+"][stock]", type="text", placeholder="Stock", value=format.stock)
        div.controls
          input(id="removeFormat", type="button", value="Remove")
        hr                          
  div.controls
    input(id="newFormat", type="button", value="New")
  label(for="artwork[tag]") Tags 
  textarea(name="artwork[tag]")= artwork.tag
  label(for="artwork[featured]") Featured on Homepage
    input(name="artwork[featured]", type="checkbox", checked=artwork.featured)
  label(for="artwork[status]") Site Status
  select(name="artwork[status]")
    - var statuses = ['offline', 'published']
    each status in statuses 
      if artwork.status == status 
        option(value=status, selected="selected")= status
      else
        option(value=status)= status
  input(type="hidden", name="_method", value=methodOverride)
  div.controls    
    input(type="reset", value="cancel")
    input(type="submit", value="submit")
    